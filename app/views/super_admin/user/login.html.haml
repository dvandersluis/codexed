%style{ :type => 'text/css' }
  :sass
    body
      background-color: #44794e
    #login
      color: #44794E
    #login #box
      background-color: #cadcce

%table
  %tr
    %td{ :style => "vertical-align: middle; text-align: center" }
      #login.center
        %h1{ :style => 'text-align: left; line-height: 0.8em; position: relative; top: 2px;' }
          codexed admin.
        #box{ :style => "height: 100%" }
          = message_divs
        
          - form_for User.new, :url => { :action => 'login' } do |f|
            %table.form.center{ :cellspacing => 0, :style => 'width: 250px', :align => 'center' }
              %tr
                %th Username:
                %td= f.text_field :username, :size => 20
              %tr
                %th Password:
                %td= f.password_field :password, :size => 20
            %p.center
              = submit_tag "Login"
