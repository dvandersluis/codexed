- t_scope 'controllers.admin.journal.export' do
  = message_div_for :success do
    = t(:complete)
    &nbsp;
    = link_to image_tag('icons/page_white_zip.png') + " " + t(:download), {:controller => 'admin/journal/export', :action => 'download'}, :style => "font-variant: small-caps; font-weight: bold"
    %p.smaller
      - if @journal.export.expires_at > Time.now.utc
        = t(:expires_in, :time => time_ago_in_words(@journal.export.expires_at))
      - else
        = t(:expired)
  .tcenter.lightfill.padded
    - form_tag({:controller => 'admin/journal/export', :action => 'run'}, :style => "display: inline") do
      = submit_tag t(:redownload) + " &raquo;"
